<!DOCTYPE html>
<html>
  <head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= content_for?(:title) ? yield(:title) : "Portfolio" %></title>
    <meta name="description" content="<%= content_for?(:description) ? yield(:description) : "Portfolio" %>">
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => true %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
    <%= csrf_meta_tags %>
  </head>
  <body>

    <div id="background"></div>

    <%= render 'refills/navigation' %>

    <main role="main">

      <div id="content">

        <%= render 'layouts/messages' %>
        <%= yield %>

      </div>

      <div id="branding">
        <%= image_tag 'me.jpg', alt: 'me', id: 'my-face'%>
        <%= render 'layouts/social' %>
      </div>

    </div>

    </main>
  </body>
</html>
